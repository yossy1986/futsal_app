<main>
<div class="advertising">
    <img src="/banner.jpg" width="100%">
</div>
    <div class="wrapper courts">
        <div class="left">
        <h2>フットサルコート検索</h2>
        <section>
        <div class="serch">
        <div class="cp_ipselect cp_sl01 wi-30">
            <select name="pref">
                <option value="">都道府県</option>
                <option value="1">大阪府</option>
                <option value="2">兵庫県</option>
                <option value="3">京都府</option>
                <option value="4">滋賀県</option>
                <option value="5">奈良県</option>
                <option value="6">和歌山県</option>
            </select>
        </div>

        </div>
        
        <div class="serch">
         <input class="btn btn-lg" href="#" role="button" value="検索" &raquo;>
        </div>
        </section>
        
        <h2>フットサルコート情報</h2>
          <% @courts.each do |court| %>
          <%= link_to court_path(court) do %>
          <div class="court-list">
            <div class="court-list-left">
              <img class="img" src="<%= "/court_images/#{court.image}" %>">
            </div>
            <div class="court-list-right">
              <h3><%= court.name %></h3>
              <p><%= court.address %></p>
            </div>
          </div>
          <% end %>
          <% end %>
        </div>
        
        <div class="right">
            <h2>最新記事</h2>
            <ul class="post">
              <% @posts.each do |post| %>
              <%= link_to post_path(post) do %>
                <li class="post-item clearfix">
                    <img src="<%="/post_images/#{post.image}" %>">
                    <p><%= post.title %></p>
                </li>
                <% end %>
                <% end %>
                
            </ul>
        </div>
    </div>
</main>