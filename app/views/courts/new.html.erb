<main>
<%= render partial: 'layouts/advertising' %>
<div class="wrapper courts new">
  <div class="left">
    <h2>フットサルコート登録</h2>
    <%= form_for @court, url: courts_path  do |f| %>
    <%= f.label :image,"コート写真" %><br>
    <%= f.file_field :image %><br>
    <%= f.label :name,"施設名" %><br>
    <%= f.text_field :name %><br>
    <%= f.label :pref_id,"地域" %><br>
    <%= f.collection_select :pref_id, Pref.all, :id, :name %><br>
    <%= f.label :address,"住所" %><br>
    <%= f.text_field :address %><br>
    <%= f.label :tel,"電話番号" %><br>
    <%= f.text_field :tel %><br>
    <%= f.label :site,"ホームページ" %><br>
    <%= f.text_field :site %><br>
    <%= f.label :open_hour,"営業時間" %><br>
    <%= f.text_area :open_hour %><br>
    <%= f.label :fee,"料金" %><br>
    <%= f.text_area :fee %><br>
    <%= f.label :parking,"駐車場" %><br>
    <%= f.text_field :parking %><br>
    <%= f.submit "コートを登録する",:class => "btn btn-info"%><br>
    <% end %>
  </div>
  <%= render partial: 'posts/post' %>
</div>
</main>