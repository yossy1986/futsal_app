<main>
<%= render partial: 'layouts/advertising' %>
<div class="wrapper teams new">
  <div class="left">
    <h2>新規登録</h2>
    <% @teaminfo.errors.full_messages.each do |message| %>
    <%= message %>
    <% end %>
    <%= form_for @teaminfo, url: teams_path  do |f| %>
    <%= f.label :name,"チーム名(25文字以内)" %><span>※</span><br>
    <%= f.text_field :name, :required => true %><br>
    <%= f.label :logo,"チームロゴ" %><br>
    <%= f.file_field :logo %><br>
    <%= f.label :image,"チーム写真" %><br>
    <%= f.file_field :image %><br>
    <%= f.label :pref,"主な活動地域" %><br>
    <%= f.collection_select :pref, Pref.all, :id, :name %><br>
    <%= f.label:facility,"主な活動施設" %><br>
    <%= f.collection_select :facility, Facility.all, :id, :name %><br>
    <%= f.label :cat,"カテゴリー" %><br>
    <%= f.collection_select :cat, Cat.all, :id, :name %><br>
    <%= f.label :age_ave,"平均年齢" %><br>
    <%= f.select :age_ave,(10..50) %><br>
    <%= fields_for @teamlevel do |teamlevel| %>
    <%= teamlevel.label:attack,"攻撃" %><br>
    <%= teamlevel.select :attack,(1..10) %><br>
    <%= teamlevel.label:phisycal,"フィジカル" %><br>
    <%= teamlevel.select :physical,(1..10) %><br>
    <%= teamlevel.label:stamina,"スタミナ" %><br>
    <%= teamlevel.select :stamina,(1..10) %><br>
    <%= teamlevel.label:defense,"守備" %><br>
    <%= teamlevel.select :defense,(1..10) %><br>
    <%= teamlevel.label:tactics,"戦術" %><br>
    <%= teamlevel.select :tactics,(1..10) %><br>
    <%= teamlevel.label:technique,"テクニック" %><br>
    <%= teamlevel.select :technique,(1..10) %><br>
    <% end %>
    <%= f.label :email,"メールアドレス" %><span>※</span><br>
    <%= f.email_field :email, :required => true %><br>
    <%= f.label :password,"パスワード" %><span>※</span><br>
    <%= f.password_field :password, :required => true %><br>
    <%= f.label :comment,"チーム紹介" %><span>※</span><br>
    <%= f.text_area :comment, :required => true %><br>
    <%= f.submit "新規登録する" ,:class => "btn btn-info" %>
    <% end %>
  </div>
  <%= render partial: 'posts/post' %>
</div>
</main>