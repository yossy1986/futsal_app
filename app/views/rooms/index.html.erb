<main>
<!--<%= render partial: 'layouts/advertising' %>-->
<div class="wrapper rooms new">
  <div class="left">
    <h2>メッセージルーム一覧</h2>
      <% @rooms.each do |room| %>
      <% if ChatLink.find_by(team_info_id: @current_team.id,room_id: room.id) || session[:team_id] ==1 %>
        <%= link_to room_path(room) do %>
        <div class="room-list">
        <h3><i class="far fa-calendar-alt"></i>　<%= room.match_req.match_date.strftime("%-m月%-d日") %>　
        <%= room.match_req.start_time.strftime("%R") %>〜<%= room.match_req.end_time.strftime("%R") %></h3>
        <h3><i class="fas fa-map-marked-alt"></i>　<%= room.match_req.facility.name %></h3>
        <img src="<%= "/logo_images/#{room.match_req.team_info.logo}" %>">
        <p><%= room.match_req.team_info.name %></p>
        </div>
        <% end %>
      <% end %>
      <% end %>
  </div>
  <%= render partial: 'posts/post' %>
</div>
</main>