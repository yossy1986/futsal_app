        <i class="fas fa-volume-up fa-2x" style="color: #FCF023;"></i>
        <% end %>
        <%= link_to "ニュース",posts_path %>
      </li>
      <li class="hidden">
        <%= link_to new_team_path do %>
        <i class="fas fa-edit fa-2x text-primary"></i>
        <% end %>
        <%= link_to "新規登録",new_team_path %>
      </li>
      <li class="hidden">
        <i class="fas fa-key fa-2x text-success"></i>
        <%= link_to "ログイン", login_path %>
      </li>
      <% end %>
      
