      </li>
      <li class="awsome">
        <%= link_to rooms_path do %>
        <i class="far fa-comment-dots fa-2x" style="color: #5BC44E;"></i>
        <% end %>
        <%= link_to "メッセージ", rooms_path%>
      </li>
      <li class="hidden">
        <%= link_to courts_path do %>
        <i class="fas fa-map-marked-alt fa-2x" style="color: #B9FE28;"></i>
        <% end %>
