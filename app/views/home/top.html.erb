        <div id="nav-content">
          <!--ログイン-->
          <% if logged_in? %>
          <li>
            <div>
              <img src="<%= "/logo_images/#{@current_team.logo}" %>">
            </div>
            <div>
              <p><%= @current_team.name %></p>
              <%= link_to "チームプロフィールを確認する", "/teams/#{@current_team.id}" ,:style =>"color:#54B4C6;"%>
            </div>
          </li>
          <li>
            <%= link_to matchs_path do %>
            <i class="fas fa-handshake fa-2x" style="color: #F94519;"></i>
            <% end %>
            <%= link_to "対戦募集",matchs_path %>
          </li>
          <li>
