  <meta name="viewport" content="width=device-width,initial-scale=1">
  <title>Futsal</title>
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>
  <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.3.1/css/all.css" integrity="sha384-mzrmE5qonljUremFsqc01SB46JvROS7bZs3IO2EmfFsd15uHvIt+Y8vEf7N7fWAU" crossorigin="anonymous">
  <%= stylesheet_link_tag    'top','hambarger', media: 'all', 'data-turbolinks-track': 'reload' %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
</head>
<body>
  <div class="top-empty"></div>
  <img class="top-bg"src="/top-bg.png">

  <header>
  <nav>
    <ul class="col-sm-3">
      <!--ログイン-->
      <% if logged_in? %>
      <li>
        <%= link_to root_url do %>
        <img class="futmake" src="/futmake-logo.png"></a>
        <% end %>
      </li>
        
        <!--ログアウト-->
      <% else %>
      <li>
        <%= link_to root_url do %>
        <img class="futmake" src="/futmake-logo.png"></a>
        <% end %>
      </li>
      <li class="top-box">
        <%= link_to "新規登録",new_team_path ,class: "btn btn-primary btn-sm"%>
        <%= link_to "ログイン ",login_path ,class: "btn btn-success btn-sm"%>
      </li>
      <% end %>
    </ul>
    <ul class="col-sm-9">
      <!--ログイン-->
