      </li>
      
      <!--ログアウト-->
      <% else %>
      <li class="awsome">
        <%= link_to matchs_path do %>
        <i class="fas fa-handshake fa-2x" style="color: #F94519;"></i>
        <% end %>
        <%= link_to "対戦募集",matchs_path %>
      </li>
      <li class="awsome">
        <%= link_to teams_path do %>
        <i class="fas fa-futbol fa-2x" style="color: #FB9C1E;"></i>
        <% end %>
