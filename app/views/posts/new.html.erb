<main>
<div class="advertising">
    <img src="/banner.jpg" width="100%">
</div>
    <div class="wrapper posts">
        <div class="left">
        <h2>記事作成</h2>
          <%= form_for @post, url: posts_path  do |f| %>
          <%= f.label :image,"記事写真" %>
          <%= f.file_field :image %>
          <%= f.label :title,"タイトル" %>
          <%= f.text_field :title %>
          <%= f.label :content,"内容" %><br>
          <%= f.text_area :content, style: 'width:100%;height:1000px;'%>
          <%= f.submit :class => "btn btn-info" %>
          <% end %>
        </div>
        <div class="right">
            <h2>オススメ記事</h2>
            <ul class="post">
                <% @posts.each do |post| %>
              <%= link_to post_path(post) do %>
                <li class="post-item clearfix">
                    <img src="<%="/post_images/#{post.image}" %>">
                    <p><%= post.title %></p>
                </li>
                <% end %>
                <% end %>
            </ul>
        </div>
    </div>
</main>