<main>
<!--<%= render partial: 'layouts/advertising' %>-->
<div class="wrapper posts new">
  <div class="left">
    <h2>記事作成</h2>
    <%= form_for @post, url: posts_path  do |f| %>
    <%= f.label :image,"記事写真" %><br>
    <%= f.file_field :image, accept: 'image/jpeg,image/gif,image/png' %><br>
    <%= f.label :title,"タイトル" %><br>
    <%= f.text_field :title, :required => true %><br>
    <%= f.label :content,"内容" %><br>
    <%= f.text_area :content, :required => true %>
    <%= f.submit "新規投稿する",:class => "btn btn-info" %>
    <% end %>
  </div>
  <%= render partial: 'posts/popular' %>
</div>
</main>